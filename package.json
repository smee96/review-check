{
  "name": "reviewsphere",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:sandbox": "wrangler pages dev dist --ip 0.0.0.0 --port 3000",
    "dev:d1": "wrangler pages dev dist --d1=reviewsphere-production --local --ip 0.0.0.0 --port 3000",
    "build": "vite build",
    "preview": "wrangler pages dev dist",
    "deploy": "npm run build && wrangler pages deploy dist",
    "deploy:prod": "npm run build && wrangler pages deploy dist --project-name reviewsphere",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "db:migrate:local": "wrangler d1 migrations apply review-spheres-v1-production --local",
    "db:migrate:prod": "wrangler d1 migrations apply review-spheres-v1-production",
    "db:seed": "wrangler d1 execute review-spheres-v1-production --local --file=./seed.sql",
    "db:seed:prod": "wrangler d1 execute review-spheres-v1-production --local --file=./seed_production_data.sql",
    "db:reset": "rm -rf .wrangler/state/v3/d1 && npm run db:migrate:local && npm run db:seed:prod",
    "db:console:local": "wrangler d1 execute review-spheres-v1-production --local",
    "db:console:prod": "wrangler d1 execute review-spheres-v1-production",
    "clean-port": "fuser -k 3000/tcp 2>/dev/null || true",
    "test": "curl http://localhost:3000"
  },
  "dependencies": {
    "hono": "^4.10.4",
    "resend": "^6.5.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250705.0",
    "@hono/vite-build": "^1.7.0",
    "@hono/vite-cloudflare-pages": "^0.4.2",
    "@hono/vite-dev-server": "^0.18.3",
    "typescript": "^5.0.0",
    "vite": "^6.3.5",
    "wrangler": "^4.4.0"
  }
}
